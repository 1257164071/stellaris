<!--common scripts for all pages-->
<script src="__ADMINEX__js/scripts.js"></script>
<script src="__ADMINEX__js/Vue2.5.16.js"></script>

<!-- layer -->
<script src="__ADMINEX__/layer/layer.js"></script>
<script>
    var res = {$res};
    var data = {$data};
    var thead = "<tr>";
    thead += '<th style="display: none">ID</th>';
    for (var i = 1; i<res.length;i++){
        thead+="<th>"+res[i]['table_row_name']+"</th>";
    }
    var tbody = '';
    for (var j = 0;j<data.length;j++){
        tbody+="<tr class=\"gradeX\">";
            for (var k=0;k<res.length;k++){
                if(k==0){
                    tbody += '<td style="display: none">'+data[j]['id']+'</td>';
                    continue;
                }
                tbody+='<td>'+ data[j][res[k]['table_row']]+'</td>';
            }
            tbody +="</tr>";
    }
    var tb = new Vue({
        el:'#hidden-table-info',
        data:{
            thead:thead,
            tbody:tbody
        }
    })

</script>
</body>
