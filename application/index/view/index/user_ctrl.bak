                        <div class="panel-body">
                            <div class="adv-table">
                                <table class="display table table-bordered" id="hidden-table-info">
                                    <thead>
                                    <tr v-html="thead">
                                    </tr>
                                    </thead>
                                    <tbody v-html="tbody">
                                    </tbody>
                                </table>
                            </div>
